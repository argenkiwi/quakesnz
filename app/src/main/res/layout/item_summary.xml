<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="@string/transition_name">

        <TextView
            android:id="@+id/magnitude_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/severe"
            android:textSize="76sp"
            tools:text="8" />

        <TextView
            android:id="@+id/magnitude_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/magnitude_big"
            android:layout_toRightOf="@id/magnitude_big"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/severe"
            android:textSize="20sp"
            tools:text=".4" />

        <TextView
            android:id="@+id/intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/magnitude_small"
            android:layout_toRightOf="@id/magnitude_small"
            android:paddingTop="12dp"
            android:textSize="20sp"
            tools:text="Severe" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/intensity"
            android:layout_below="@id/intensity"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            tools:text="20km south east of Wellington" />

        <TextView
            android:id="@+id/depth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/intensity"
            android:layout_alignStart="@+id/intensity"
            android:layout_below="@id/location"
            android:fontFamily="sans-serif-light"
            android:paddingTop="2dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="Depth: 159km" />

        <View
            android:id="@+id/colorTab"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/magnitude_big"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/magnitude_big"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/colorTab"
            android:layout_toStartOf="@+id/colorTab"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            tools:text="13:37" />

    </RelativeLayout>
</android.support.v7.widget.CardView>